<% provide(:title, 'New Vertex') %>
<h2>New Vertex</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@vertex) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :lat %>
      <%= f.text_field :lat %>

      <%= f.label :lon %>
      <%= f.text_field :lon %>

      <%= f.submit "Ok", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
